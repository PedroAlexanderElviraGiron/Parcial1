        <Label Text ="" x:Name="BILLEUNO" TextColor="Black" FontSize="18"/>
        <Label Text ="" x:Name="MONEDACINCUEN" TextColor="Black" FontSize="18"/>
        <Label Text ="" x:Name="MONEDAVEINTI" TextColor="Black" FontSize="18"/>
